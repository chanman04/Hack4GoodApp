{
  "compileOnSave": false,
  "compilerOptions": {
    //updated base Angular application to look to src folder as base folder
    "baseUrl": "src",
    //adding what path to look in, inside of the base folder
    "paths":{
      "@app/*": ["app/*"]
    },
    
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  }
}
